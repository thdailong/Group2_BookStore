@{
    ViewData["Title"] = "register";
}
@model Customer

<form asp-controller="User" asp-action="registerr" method="post" id="formRegister">
    <h3 class="text-center txt-login" style="color: #dc3545; padding-top: 10px;">REGISTER</h3>
    <hr>
    <div class="form-group" style="margin-left: 25%; width: 100%;   ">
        <label class="font-weight-bold txt-login" for="Name">FullName</label><br>
        <input class="form-control inp-login" id="name" placeholder="Enter name" asp-for="Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-left: 25%; width: 100%;   ">
        <label class="font-weight-bold txt-login" for="CustomerEmail">Email</label><br>
        <input class="form-control inp-login" id="CustomerEmail" placeholder="Enter email" asp-for="CustomerEmail"
            required>
        <span class="txt-login text-danger"></span>
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-left: 25%; width: 100%;  ">
        <label class="font-weight-bold txt-login" for="Sex">Sex</label><br>
        <select asp-for="Sex">
            <option value="0">Female</option>
            <option value="1">Male</option>
        </select>
        <span class="txt-login text-danger"></span>
    </div>
    <br>
    <br>
    <div class="form-group" style="margin-left: 25%; width: 100%;  ">
        <label class="font-weight-bold txt-login" for="PhoneNumber">Phone number</label><br>
        <input class="form-control inp-login" id="PhoneNumber" placeholder="Enter phone number" asp-for="PhoneNumber"
            type="tel" pattern="[0-9]{10}" required>
        <span class="txt-login text-danger"></span>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-left: 25%; width: 100%;  ">
        <label class="font-weight-bold txt-login" for="DateOfBirth">Date of birth</label><br>
        <input asp-for="DateOfBirth" class="form-control inp-login" required type="date" min="1900-01-01"
            max="2017-01-01">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-left: 25%; width: 100%;  ">
        <label class="font-weight-bold txt-login" for="Image">Image</label><br>
        <input asp-for="Image" type="text" class="inp-login">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-left: 25%; width: 100%; ">
        <label class="font-weight-bold txt-login" for="Password">Password</label><br>
        <input type="password" class="form-control inp-login" asp-for="Password" placeholder="Enter password" required>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-left: 25%; width: 100%;">
        <label class="font-weight-bold txt-login" for="">Confirm Password</label><br>
        <input type="password" class="form-control inp-login" name="RepeatPassword" placeholder="Enter again password"
            required>
    </div>
    <div class="form-group" style="margin-left: 25%; width: 100%;">
        <span class="txt-login text-danger">@TempData["Message"]</span>
    </div>

    <div class="form-group">
        <button type="submit" value="submit" class="btn btn-primary txt-login" id="btn-login"
            style="margin-left: 35%; width: 30%; margin-bottom: 25px;">
            Register
        </button>
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}